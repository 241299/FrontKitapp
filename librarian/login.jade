include mixins
doctype html
html
    +head("Login")
    body
        .page.login-page
            .container.d-flex.align-items-center
                .form-holder.has-shadow
                    .row
                        // Logo & Information Panel
                        .col-lg-6
                            .info.d-flex.align-items-center
                                .content
                                    .logo
                                        img.logo.animated.fadeInUp(src='images/logo.png', alt='Kitapp')
                                        br
                                        .offer.animated.fadeInLeft
                                            h1.title
                                                | Kitapp LMS
                                    p.animated.fadeIn Innopolis University LMS
                        // Form Panel
                        .col-lg-6.bg-white
                            .form.d-flex.align-items-center
                                .content
                                    form#login-form(method='post')
                                        .form-group
                                            input#login-username.input-material(type='email', name='loginUsername', required='')
                                            label.label-material(for='login-username') E-mail
                                        .form-group
                                            input#login-password.input-material(type='password', name='loginPassword', required='')
                                            label.label-material(for='login-password') Password
                                        a#login.btn.btn-primary(href='dashboard.html') Login
                                    // This should be submit button but I replaced it with <a> for demo purposes
                                    a.forgot-pass(href='#') Forgot password?
                                    br
                                    a.support(href='mailto:it@innopolis.ru') Have issues?
            .copyrights.text-center
                p
                    | Kitapp, 2018 
                    br
                    | Design by 
                    a.external(href='https://bootstrapious.com/admin-templates') Bootstrapious
                    // Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)
        // Javascript files
        +java-script()
